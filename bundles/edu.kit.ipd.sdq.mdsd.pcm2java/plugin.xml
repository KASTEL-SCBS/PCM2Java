                 <test
                       property="org.eclipse.core.resources.name"
                       value="*.adversary">
                 </test>-->
              </or>
				       </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </menu>
         <separator
               name="edu.kit.ipd.sdq.mdsd.pcm2java.afterseparator"
               visible="true">
         </separator>
