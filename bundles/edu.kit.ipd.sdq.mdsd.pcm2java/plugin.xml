   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="edu.kit.ipd.sdq.mdsd.pcm2java.handler.PCM2JavaHandler"
            id="edu.kit.ipd.sdq.mdsd.pcm2java.commands.createjava"
            name="Create Java Code">
         <commandParameter
               id="edu.kit.ipd.sdq.mdsd.pcm2java.publicFieldsParameter"
               name="publicFields"
               optional="true"
               values="org.eclipse.ui.internal.registry.WizardParameterValues$New">
         </commandParameter>
         <commandParameter
               id="edu.kit.ipd.sdq.mdsd.pcm2java.replaceStringsWithCharArraysParameter"
               name="replaceStringsWithCharArrays"
               optional="true">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <separator
               name="edu.kit.ipd.sdq.mdsd.pcm2java.beforeseparator"
               visible="true">
         </separator>
         <menu
               id="kastelCodeAnalysis"
               label="KASTEL Code Analysis">
            <command
                  commandId="edu.kit.ipd.sdq.mdsd.pcm2java.commands.createjava"
                  label="Create Java Code"
                  style="push"
                  tooltip="Create Java Code">
                  <parameter
                     name="edu.kit.ipd.sdq.mdsd.pcm2java.publicFieldsParameter"
                     value="false">
               	  </parameter>
               	  <parameter
                     name="edu.kit.ipd.sdq.mdsd.pcm2java.replaceStringsWithCharArraysParameter"
                     value="false">
               	  </parameter>
            </command>
            <command
                  commandId="edu.kit.ipd.sdq.mdsd.pcm2java.commands.createjava"
                  label="Create Java Code (public fields in data types)"
                  style="push"
                  tooltip="Create Java Code">
                  <parameter
                     name="edu.kit.ipd.sdq.mdsd.pcm2java.publicFieldsParameter"
                     value="true">
               	  </parameter>
               	  <parameter
                     name="edu.kit.ipd.sdq.mdsd.pcm2java.replaceStringsWithCharArraysParameter"
                     value="false">
               	  </parameter>
            </command>
            <command
                  commandId="edu.kit.ipd.sdq.mdsd.pcm2java.commands.createjava"
                  label="Create Java Code (Char arrays instead of Strings)"
                  style="push"
                  tooltip="Create Java Code">
                  <parameter
                     name="edu.kit.ipd.sdq.mdsd.pcm2java.publicFieldsParameter"
                     value="false">
               	  </parameter>
               	  <parameter
                     name="edu.kit.ipd.sdq.mdsd.pcm2java.replaceStringsWithCharArraysParameter"
                     value="true">
               	  </parameter>
            </command>
            <command
                  commandId="edu.kit.ipd.sdq.mdsd.pcm2java.commands.createjava"
                  label="Create Java Code (public fields and no Strings)"
                  style="push"
                  tooltip="Create Java Code">
                  <parameter
                     name="edu.kit.ipd.sdq.mdsd.pcm2java.publicFieldsParameter"
                     value="true">
               	  </parameter>
               	  <parameter
                     name="edu.kit.ipd.sdq.mdsd.pcm2java.replaceStringsWithCharArraysParameter"
                     value="true">
               	  </parameter>
            </command>
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate>
				       <adapt type="org.eclipse.core.resources.IResource">
              <or>
                 <test
                       property="org.eclipse.core.resources.name"
                       value="*.repository">
                 </test>
                 <!--<test
                       property="org.eclipse.core.resources.name"
